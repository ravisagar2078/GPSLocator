<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5eff0">


    <Button
        android:id="@+id/btn_reg"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/button_selector"
        android:padding="3dp"
        android:text="SignUp"
android:onClick="onReg"
        android:textColor="@color/white"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_below="@+id/confirmPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <EditText
        android:id="@+id/et_number"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/text_selector"
        android:drawableLeft="@drawable/phone2"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:hint="MobileNumber"
        android:inputType="phone"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="16sp"
        android:layout_below="@+id/et_email"
        android:layout_alignStart="@+id/et_email"
        android:layout_marginTop="10dp" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/text_selector"
        android:drawableLeft="@drawable/password1"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:hint="Passowrd"
        android:inputType="textPassword"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/et_number"
        android:layout_alignStart="@+id/et_number" />

    <EditText
        android:id="@+id/confirmPassword"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/text_selector"
        android:drawableLeft="@drawable/password1"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:hint="ConfirmPassword"
        android:inputType="textPassword"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="16sp"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/et_password"
        android:layout_alignStart="@+id/et_password" />

    <EditText
        android:id="@+id/et_username"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/text_selector"
        android:drawableLeft="@drawable/user1"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:hint="Username"
        android:inputType="textCapWords"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="16sp"
        android:layout_marginTop="37dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/text_selector"
        android:drawableLeft="@drawable/email2"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:singleLine="true"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="16sp"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/et_username"
        android:layout_alignStart="@+id/et_username" />


</RelativeLayout>